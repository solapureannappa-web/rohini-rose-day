<script>
let step = 0;

function showNext() {
  step++;

  if(step === 1) document.getElementById("line1").style.display = "block";
  if(step === 2) document.getElementById("line2").style.display = "block";
  if(step === 3) document.getElementById("line3").style.display = "block";
  if(step === 4) document.getElementById("line4").style.display = "block";
  if(step === 5) document.getElementById("line5").style.display = "block";
  if(step === 6) document.getElementById("sign").style.display = "block";
}
</script>

